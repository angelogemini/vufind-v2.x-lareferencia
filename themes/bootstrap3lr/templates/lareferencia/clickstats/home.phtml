<script type="text/javascript">

var rawJson =  <?=json_encode($this->pivots) ?>;
var data = [];
var sources = {}
var dataSet = []

$.each( rawJson, function( key, value ) {
  var entry = {}
  var entryArray = [];
  
  entry['timestamp'] = key;
  entryArray.push(key);

  $.each( value.pivot, function( i, pivot ) {
	entry[pivot.value] = pivot.count;
	sources[pivot.value] = "";

	entryArray.push(pivot.count);
  });

  data.push(entry);
  dataSet.push(entryArray);
});

Morris.Line({
    element: 'clicks-line-chart',
    data: data,
    xkey: 'timestamp', 
    ykeys: Object.keys(sources),
    labels: Object.keys(sources),
    xLabels: 'month',
    pointSize: 2,
    smoth: 'false',
    hideHover: false,
    resize: true
});

$('#clicks-datatable').dataTable( {
    "data": dataSet
} );   

</script>

